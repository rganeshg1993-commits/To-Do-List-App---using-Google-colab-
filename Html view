# Simple To-Do List App in Python
# Works in Google Colab and GitHub (console-based)

class ToDoList:
    def __init__(self):
        self.tasks = []

    def add_task(self, task):
        """Add a new task to the list"""
        self.tasks.append({"task": task, "completed": False})
        print(f"âœ… Task '{task}' added successfully!")

    def show_tasks(self):
        """Display all tasks with status"""
        if not self.tasks:
            print("ğŸ“Œ No tasks available.")
            return
        print("\n--- Your To-Do List ---")
        for i, task in enumerate(self.tasks, start=1):
            status = "âœ”ï¸ Done" if task["completed"] else "âŒ Not Done"
            print(f"{i}. {task['task']} [{status}]")
        print("----------------------\n")

    def mark_completed(self, task_no):
        """Mark a task as completed"""
        if 0 < task_no <= len(self.tasks):
            self.tasks[task_no - 1]["completed"] = True
            print(f"ğŸ‰ Task {task_no} marked as completed!")
        else:
            print("âš ï¸ Invalid task number.")

    def delete_task(self, task_no):
        """Delete a task from the list"""
        if 0 < task_no <= len(self.tasks):
            removed = self.tasks.pop(task_no - 1)
            print(f"ğŸ—‘ï¸ Task '{removed['task']}' deleted.")
        else:
            print("âš ï¸ Invalid task number.")


# Run the To-Do List app in console (Colab/GitHub)
def main():
    todo = ToDoList()

    while True:
        print("\n==== To-Do List Menu ====")
        print("1. Add Task")
        print("2. Show Tasks")
        print("3. Mark Task as Completed")
        print("4. Delete Task")
        print("5. Exit")

        choice = input("Enter your choice (1-5): ")

        if choice == "1":
            task = input("Enter the task: ")
            todo.add_task(task)

        elif choice == "2":
            todo.show_tasks()

        elif choice == "3":
            todo.show_tasks()
            try:
                task_no = int(input("Enter task number to mark completed: "))
                todo.mark_completed(task_no)
            except ValueError:
                print("âš ï¸ Please enter a valid number.")

        elif choice == "4":
            todo.show_tasks()
            try:
                task_no = int(input("Enter task number to delete: "))
                todo.delete_task(task_no)
            except ValueError:
                print("âš ï¸ Please enter a valid number.")

        elif choice == "5":
            print("ğŸ‘‹ Exiting... Have a productive day!")
            break

        else:
            print("âš ï¸ Invalid choice! Please try again.")


if __name__ == "__main__":
    main()
